#:kivy 1.0
<LoginScreen>: 
    GridLayout:
        cols: 1
        GridLayout:
            Label: 
                text: "User Login"
            TextInput:
                hint_text:"Username"
            TextInput: 
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text:"Forgot password?"
            Button:
                text:"Sign Up"

<RootWidget>:
    LoginScreen:
        name:"login_screen"
        
